generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String   @id @default(uuid())
  desoPublicKey String   @unique
  email         String?
  name          String?
  status        String   @default("pending") // pending, approved, rejected
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  approvedAt    DateTime?
  approvedBy    String?
  
  sessions      Session[]
  
  @@index([status])
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  sessionToken String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionToken])
}

model OIDCSession {
  id           String   @id @default(uuid())
  grantId      String?
  uid          String   @unique
  payload      String   // JSON data
  expiresAt    DateTime
  consumedAt   DateTime?
  createdAt    DateTime @default(now())
  
  @@index([grantId])
  @@index([expiresAt])
}

model AdminUser {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}
